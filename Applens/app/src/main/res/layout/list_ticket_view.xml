<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="3dp"
            app:cardBackgroundColor="#d8d9d2"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                    android:id="@+id/ticket_id"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="ID"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/effort_log"
                    android:layout_width="54dp"
                    android:layout_height="25dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="0 hrs"
                    app:layout_constraintEnd_toStartOf="@+id/counter_img1" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                    android:id="@+id/ticket_description"
                    android:layout_width="160dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="14dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Ticket description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticket_id"/>

            <Spinner
                    android:id="@+id/spinner_status"
                    android:entries="@array/spinner_status_entries"
                    android:layout_width="160dp"
                    android:layout_height="39dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ticket_description" android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" app:layout_constraintHorizontal_bias="1.0"
                    android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/effort_log"/>

            <Spinner
                    android:id="@+id/spinner_service"
                    android:entries="@array/spinner_service_entries"
                    android:layout_width="160dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticket_description"/>

            <Spinner
                    android:id="@+id/spinner_activity"
                    android:entries="@array/spinner_activity_entries"
                    android:layout_width="160dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_status"
                    app:layout_constraintStart_toEndOf="@+id/spinner_service" android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintVertical_bias="1.0"/>

            <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Effort:"
                    app:layout_constraintBottom_toBottomOf="@+id/effort_log"
                    app:layout_constraintTop_toTopOf="@+id/effort_log"
                    app:layout_constraintVertical_bias="0.0"
                    android:textStyle="bold" app:layout_constraintEnd_toStartOf="@+id/effort_log"
                    android:layout_marginEnd="24dp" android:layout_marginRight="24dp"/>

            <ImageView
                    android:id="@+id/counter_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_input_add"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/effort_log"
                    app:layout_constraintTop_toTopOf="@+id/effort_log"
                    app:layout_constraintVertical_bias="1.0"/>
            <TextView
                    android:text="Save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save_button" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:textStyle="bold"
                    android:textColor="@color/colorApplensgreen"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>