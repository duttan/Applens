<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
                name="mainViewModel"
                type="com.example.applens.createticket.MainViewModel" />
    </data>
    <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/root_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3B4047"
                android:layout_marginTop="50dp">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_ticketlist"
                    android:layout_width="398dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#3B4047"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/submitbutton"
                    app:layout_constraintVertical_bias="0.0"/>
            <View
                    android:layout_width="275dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view"
                    app:layout_constraintTop_toBottomOf="@+id/datepicker" android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>

            <EditText
                    android:id="@+id/datepicker"
                    android:layout_width="177dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:ems="10"
                    android:hint="July 15 Thursday"
                    android:inputType="date"
                    android:textColorHint="#ffffff"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/effortlogged"
                    android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent"/>

            <Button
                    android:id="@+id/submitbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:text="Submit"
                    style="@style/RoundedButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/view" android:textStyle="bold"/>

            <TextView
                    android:id="@+id/effortlogged"
                    android:layout_width="103dp"
                    android:layout_height="27dp"
                    android:hint="Effort logged :"
                    android:textColorHint="#ffffff"

                    app:layout_constraintEnd_toStartOf="@+id/effort_display"
                    android:layout_marginRight="12dp" android:layout_marginEnd="12dp"
                    app:layout_constraintBottom_toTopOf="@+id/recyclerView_ticketlist" android:layout_marginBottom="76dp"/>

            <TextView
                    android:id="@+id/effort_display"
                    android:layout_width="55dp"
                    android:layout_height="27dp"
                    android:text="8:00"
                    android:textColor="#ffffff"
                    app:layout_constraintBottom_toBottomOf="@+id/effortlogged"
                    app:layout_constraintTop_toTopOf="@+id/effortlogged" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                    app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="Available Tickets:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" android:textColor="#E5E5E5"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/recyclerView_ticketlist"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" android:textSize="18sp"/>

            <Button
                    android:id="@+id/fab"
                    style="@style/RoundedButton"
                    android:text="+   Create Ticket"
                    android:layout_width="155dp"
                    android:layout_height="54dp"
                    app:layout_constraintBottom_toBottomOf="@+id/recyclerView_ticketlist"
                    android:layout_marginBottom="72dp" android:textStyle="bold" android:layout_marginStart="224dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="224dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>