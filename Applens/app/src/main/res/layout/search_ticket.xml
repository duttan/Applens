<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorApplensgrey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorApplensgrey"
            android:id="@+id/constraintLayout"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">


        <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="3dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <EditText
                        android:id="@+id/ticket_id"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="ID"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <Spinner
                        android:id="@+id/spinner_status"
                        android:entries="@array/spinner_status_entries"
                        android:layout_width="160dp"
                        android:layout_height="39dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ticket_id" android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintTop_toTopOf="parent"/>

                <Spinner
                        android:id="@+id/spinner_application"
                        android:entries="@array/spinner_application_entries_search"
                        android:layout_width="160dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/ticket_id" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

                <Spinner
                        android:id="@+id/spinner_activity"
                        android:entries="@array/spinner_activity_entries_search"
                        android:layout_width="160dp"
                        android:layout_height="39dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner_status"
                        app:layout_constraintStart_toEndOf="@+id/spinner_application" android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="1.0"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.022"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorWhite"
            android:id="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/searching_button"
            app:layout_constraintBottom_toBottomOf="@+id/searching_button"
            app:layout_constraintEnd_toStartOf="@+id/searching_button"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            style="@style/RoundedButton"
            android:layout_height="wrap_content"
            android:id="@+id/searching_button" android:textStyle="bold" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_searchlist"
            android:layout_width="match_parent"
            android:layout_height="492dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="62dp" app:layout_constraintTop_toBottomOf="@+id/searching_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>

