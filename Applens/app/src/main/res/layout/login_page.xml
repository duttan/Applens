<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorApplensgreen"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:id="@+id/card_view_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">


        <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/login_id"
                android:focusableInTouchMode="true"
                android:hint="UserId"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_view_password"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:contentPadding="5dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintHorizontal_bias="0.507" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/card_view_email">


        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:id="@+id/login_password"
                android:hint="Password"
                android:layout_marginLeft="5dp"
        />

    </androidx.cardview.widget.CardView>
    <Button
            android:text="Login"
            style="@style/RoundedButton.Grey"
            android:layout_width="143dp"
            android:layout_height="51dp"
            android:id="@+id/login_button"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/card_view_password"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars[3]"
            android:src="@drawable/logo_applens"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="42dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout> </ScrollView>