<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="14dp"
                      android:text="Ticket ID:" android:textSize="12sp"
                      app:layout_constraintStart_toStartOf="@+id/ticket_id"
                      app:layout_constraintEnd_toEndOf="@+id/ticket_id" app:layout_constraintHorizontal_bias="0.0"
                      android:textColor="#413B3B" android:textStyle="bold"
                      app:layout_constraintBottom_toTopOf="@+id/ticket_id" android:layout_marginBottom="3dp"/>


            <EditText
                    android:id="@+id/ticket_id"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="ID"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Status:"
                      android:textSize="12sp" android:textColor="#F84B4040" android:textStyle="bold"
                      app:layout_constraintStart_toStartOf="@+id/spinner_status"
                      app:layout_constraintEnd_toEndOf="@+id/spinner_status"
                      app:layout_constraintHorizontal_bias="0.0"
                      app:layout_constraintBottom_toTopOf="@+id/spinner_status" android:layout_marginBottom="3dp"/>

            <Spinner
                    android:id="@+id/spinner_status"
                    android:entries="@array/spinner_status_entries"
                    android:layout_width="160dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ticket_id" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.97"
                    app:layout_constraintTop_toTopOf="parent"/>

            <Spinner
                    android:id="@+id/spinner_application"
                    android:entries="@array/spinner_application_entries_search"
                    android:layout_width="160dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/ticket_id" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

            <Spinner
                    android:id="@+id/spinner_activity"
                    android:entries="@array/spinner_activity_entries_search"
                    android:layout_width="160dp"
                    android:layout_height="39dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner_status"
                    app:layout_constraintStart_toEndOf="@+id/spinner_application" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="1.0"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.022"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>